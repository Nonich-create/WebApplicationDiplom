@model WebApplicationDiplom.ViewModels.ReserveOfPersonnelViewModel
@{
    ViewBag.Title = "Перевод работника из резерва";
    Layout = "";
}
<head runat="server">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/StyleWindow.css" />
    <link rel="stylesheet" href="~/css/BodyStyle.css" />
    <link rel="stylesheet" href="~/css/Button.css" />
    <link rel="stylesheet" href="~/css/Input.css" />
</head>
<body class="bodyWww">
    <form class="form" asp-action="Edit" asp-controller="ReserveOfPersonnel" asp-route-id="@Model.ReserveId">
