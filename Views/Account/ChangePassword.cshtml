@model WebApplicationDiplom.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
    Layout = "";
}
<head runat="server">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/StyleWindow.css" />
    <link rel="stylesheet" href="~/css/Box.css" />
    <link rel="stylesheet" href="~/css/Body.css" />
    <link rel="stylesheet" href="~/css/ButtonTable.css" />
    <link rel="stylesheet" href="~/css/Input.css" />
</head>
<body class="body">
    <form class="form" asp-action="ChangePassword" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h2 class="form_title">Изменение пароля для пользователя @Model.Identifier</h2>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Identifier" />
        <div class="form_grup">
            <label asp-for="NewPassword" class="form_label">Новый пароль</label>
            <input type="text" asp-for="NewPassword" class="input" />
        </div>
        <div class="form_grup">
            <input type="submit" value="Сохранить" class="buttonTable" />
            <a class="buttonTable" asp-controller="Account" asp-action="OrganizationInformation" style=" text-decoration: none;">Назад</a><br />
        </div>
    </form>
</body>