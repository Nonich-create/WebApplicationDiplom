@model WebApplicationDiplom.ViewModels.HistoryOfAppointmentsViewModel 

@{
    ViewBag.Title = "Create";
}

<h2>Назначения на должность</h2>
<form method="post" asp-controller="HistoryOfAppointments" asp-action="Create" style="width: 50%; text-align: left;">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label>Информация о работники</label><br />
        <select asp-for="EmployeeRegistrationLogId">
            @foreach (var item in Model.employeeRegistrationLogs)
            {
                <option value="@item.EmployeeRegistrationId">@item.Worker.Surname @item.Worker.Name @item.Worker.DoubleName, @item.Worker.positon.JobTitle</option>
            }
        </select>
    </div>

    <br />
    <div>
        <label>Должность</label><br />
        @Html.DropDownListFor(Model => Model.TablePositionId, ViewBag.TablePositionId as SelectList)
    </div>
    <br /><br /><br />
    <div>
        <input type="submit" value="Регистрация" style="width: 50%; margin: 0 auto; text-align: start, " text-align: center;" />
    </div>
</form>