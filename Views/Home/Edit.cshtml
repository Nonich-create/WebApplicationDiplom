@model WebApplicationDiplom.Models.TableOrganizations
@{
    ViewBag.Title = "Организации работника";
    Layout = "";
}
<head runat="server">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/StyleWindow.css" />
    <link rel="stylesheet" href="~/css/Body.css" />
    <link rel="stylesheet" href="~/css/Button.css" />
    <link rel="stylesheet" href="~/css/Input.css" />
</head>
<body class="body">
    <form class="form" asp-action="Edit" asp-controller="Home" asp-route-id="@Model.TableOrganizationsId">
        <input type="hidden" asp-for="TableOrganizationsId" class="form-control" />
        <input type="hidden" asp-for="SubordinationId" class="form-control" />
        <input type="hidden" asp-for="UserId" class="form-control" />
        <div class="form_grup">
            <label asp-for="NameOfOrganization" class="form_label">Название организации*</label>
            <input type="text" asp-for="NameOfOrganization" class="input" />
        </div>
        <div class="form_grup">
            <label asp-for="TypeOrganization" class="form_label">Тип организации*</label>
            <input type="text" asp-for="TypeOrganization" class="input" />
        </div>
        <div class="form_grup">
            <label asp-for="Email" class="form_label">Электронный адрес*</label>
            <input type="text" asp-for="Email" class="input" />
        </div>
        <div>
            <input type="submit" value="Сохранить" class="button" />
            <a class="button" asp-controller="Home" asp-action="Index" style=" text-decoration: none;">Назад</a><br />
        </div>
    </form>
</body>