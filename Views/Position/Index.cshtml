@model IEnumerable<TablePosition>
@{
    ViewData["Title"] = "Должности";
}
<head runat="server">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/BodyStyle.css" />
    <link rel="stylesheet" href="~/css/ddott.css" />
    <link rel="stylesheet" href="~/css/StyleInput.css" />
</head>
 
<div id="demotext">
    <p style="font-size: 44pt;">Должности</p>
    <div class="ccd">

        <a class="ddott" asp-action="Create">Добавить должность</a>
    </div>
</div>
    <body class="body">
        <table class="Table">
            <thead>
                <tr>
                    <th>Должность</th>
                    <th>Описания должности</th>
                    <th>Количество мест</th>
                    <th>Дата регистрации должности</th>
                </tr>
            </thead>
            <tbody>
                @foreach (TablePosition position in Model)
                {
                    <tr>
                        <td>@position.Position.JobTitle</td>
                        <td>@position.JobResponsibilities</td>
                        <td>@position.CountPosition</td>
                        <td>@position.DateOfJobRegistration.ToString().Remove(10)</td>
                        @*<td> <a asp-action="Delete" asp-controller="Position" asp-route-id="@position.TablePositionId">Удалить запись</a></td>*@
                    </tr>
                }
            </tbody>
        </table>

    </body>
