@model IEnumerable<AdvancedTraining>
@{
    ViewData["Title"] = "Повышение квалификации";
}
<a asp-action="Create">Добавить работнику повышение квалификации</a>
 
<table class="table">
    <tr>
        <th>ФИО</th>
        <th>Учреждения образования</th>
        <th>Начала квалификации</th>
        <th>Завершение квалификации</th>
    </tr>
    @foreach (AdvancedTraining item in Model)
    {
        <tr>
            <td>@item.EmployeeRegistrationLog.Worker.Surname @item.EmployeeRegistrationLog.Worker.Name @item.EmployeeRegistrationLog.Worker.DoubleName</td>
            <td>@item.EducationalInstitutions.NameEducationalInstitutions</td>
            <td>@item.Start.ToString().Remove(10)</td>
            <td>@item.End.ToString().Remove(10)</td>
            <td> <a asp-action="Edit" asp-controller="AdvancedTraining" asp-route-id="@item.AdvancedTrainingId">Изменить</a></td>
        </tr>
    }
</table>

