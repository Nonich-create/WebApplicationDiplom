@model WebApplicationDiplom.Models.Worker
@{
    ViewBag.Title = "Редактирование работника";
}

<form asp-action="Edit" asp-controller="Worker" asp-route-id="@Model.WorkerId">
    <input type="hidden" asp-for="WorkerId" class="form-control" />
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="input" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="input" />
    </div>
    <div class="form-group">
        <label asp-for="DoubleName" class="control-label">Отчёство</label>
        <input type="text" asp-for="DoubleName" class="input" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label">Дата рождения</label>
        <input type="date" asp-for="DateOfBirth" class="input" />
    </div>
    <div >
        <input type="submit" value="Сохранить" class="button" />
    </div>
</form>