@model IEnumerable<EmployeeRegistrationLog>
@{
    ViewData["Title"] = "Работники";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head runat="server">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/Table.css" />
    <link rel="stylesheet" href="~/css/MyStyle.css" />
    <link rel="stylesheet" href="~/css/Body.css" />
    <link rel="stylesheet" href="~/css/Button.css" />
    <link rel="stylesheet" href="~/css/ButtonTable.css" />
</head>    
<div id="demotext">
    <div>
        <p style="font-size: 44pt;">Работники</p>
        @foreach (EmployeeRegistrationLog worker in Model)
        {
            <p style="font-size: 44pt;">@worker.Organizations.NameOfOrganization</p>
            break;
        }
    </div>
    <div class="ccd">
        <a class="ddott" asp-action="Create">Добавить</a>
    </div>
</div>
<body class="bodyWww">
    <p>Работники которые числятся в организации</p>
        <table class="blueTable">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Отчёство</th>
                    <th>Дата рождения</th>
                    <th>Дата регистрации работника</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EmployeeRegistrationLog worker in Model)
                {
                    <tr>
                        <td>@worker.Worker.Surname</td>
                        <td>@worker.Worker.Name</td>
                        <td>@worker.Worker.DoubleName</td>
                        <td>@worker.Worker.DateOfBirth.ToString().Remove(10)</td>
                        <td>@worker.EmployeeRegistrationDate.ToString().Remove(10)</td>
                        <td> <a class="buttonTable" asp-action="Edit" asp-controller="Worker" asp-route-id="@worker.WorkerId" style="text-decoration: none;">Изменить</a></td>
                        <td> <a class="buttonTableRed" asp-action="Delete" asp-controller="Worker" asp-route-id="@worker.WorkerId" style="text-decoration: none;">Удалить запись</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
